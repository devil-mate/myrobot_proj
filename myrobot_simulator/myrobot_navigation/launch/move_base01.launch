<launch>
    <master auto="start"/>
    <arg name="mapName"  default ="$(find myrobot_navigation)/maps/testMap.yaml" />
    <arg name="map_file" default="$(find rosbot_navigation)/maps/test_map.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg mapName)" /> 
    <!-- <include file="$(find myrobot_navigation)/launch/myrosbot_navigation.launch"/> -->
    <!-- Run the map server -->
    <!-- <node name="map_server" pkg="map_server" type="map_server" args="$(arg mapName)"> -->
